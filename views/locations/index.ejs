<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Jordanian Experience</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="/stylesheets/home.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <!-- font awesome -->
    <script
      src="https://kit.fontawesome.com/dbed6b6114.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('../partials/navbar') %>
    <div class="products">
      <div class="container">
        <h1 class="lg-title">Our Locations</h1>
        <p class="text-light">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur
          quos sit consectetur, ipsa voluptatem vitae necessitatibus dicta
          veniam, optio, possimus assumenda laudantium. Temporibus, quis cum.
        </p>

        <div class="product-items">
          <!-- single product -->
          <% for(let location of locations) { %>
          <div class="product">
            <div class="product-content">
              <div class="product-img">
                <img src="<%= location.image%>" alt="product image" />
              </div>
              <div class="product-btns">
                <a href="/locations/<%= location._id%>" class="btn-cart">
                  View Location
                  <span><i class="fas fa-plus"></i></span>
                </a>
              </div>
            </div>

            <div class="product-info">
              <div class="product-info-top">
                <h2 class="sm-title"><%=location.category%></h2>
                <div class="rating">
                  <span><i class="fas fa-star"></i></span>
                  <span><i class="fas fa-star"></i></span>
                  <span><i class="fas fa-star"></i></span>
                  <span><i class="fas fa-star"></i></span>
                  <span><i class="far fa-star"></i></span>
                </div>
              </div>
              <a href="#" class="product-name"><%= location.title %></a>
            </div>

            <div class="off-info">
              <h2 class="sm-title">Review</h2>
            </div>
          </div>
          <% } %>
          <!-- end of single product -->
        </div>
      </div>
    </div>

    <div class="product-collection">
      <div class="container">
        <h1 class="lg-title">Categories</h1>
        <div class="product-collection-wrapper">
          <!-- product col left -->
          <div class="product-col-left flex" id="categories">
            <div class="product-col-content">
              <h2 class="md-title">Resturants</h2>
              <p class="text-light"></p>
              <a href="/locations/resturants" class="btn-dark"
                >View Resturants</a
              >
            </div>
          </div>

          <!-- product col right -->
          <div class="product-col-right">
            <div class="product-col-r-top flex">
              <div class="product-col-content">
                <h2 class="md-title">Hotels</h2>
                <p class="text-light"></p>
                <a href="/locations/hotels" class="btn-dark">View Hotels</a>
              </div>
            </div>

            <div class="product-col-r-bottom">
              <!-- left -->
              <div class="flex">
                <div class="product-col-content">
                  <h2 class="md-title">Things To Do</h2>
                  <p class="text-light"></p>
                  <a href="/locations/things" class="btn-dark"
                    >View Things To Do</a
                  >
                </div>
              </div>
              <!-- right -->
              <div class="flex">
                <div class="product-col-content">
                  <h2 class="md-title">Cafes</h2>
                  <p class="text-light"></p>
                  <a href="/locations/cafes" class="btn-dark">View Cafes</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/scripts/navbar.js"></script>
  </body>
</html>
